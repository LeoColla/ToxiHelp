<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/cinza_fundo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b_categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/botao_arredondado"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Categorias"
        android:textColor="@color/botao_branco_tint"
        android:textSize="20sp"
        app:backgroundTint="@color/botao_vermelho_tint"
        app:layout_constraintBottom_toTopOf="@id/b_introducao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/b_introducao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/botao_arredondado"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Introdução"
        android:textColor="@color/botao_branco_tint"
        android:textSize="20sp"
        app:backgroundTint="@color/botao_vermelho_tint"
        app:layout_constraintBottom_toTopOf="@id/b_referencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_categoria" />

    <Button
        android:id="@+id/b_referencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/botao_arredondado"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Referências"
        android:textColor="@color/botao_branco_tint"
        android:textSize="20sp"
        app:backgroundTint="@color/botao_vermelho_tint"
        app:layout_constraintBottom_toTopOf="@id/b_credito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_introducao" />

    <Button
        android:id="@+id/b_credito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/botao_arredondado"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Créditos"
        android:textColor="@color/botao_branco_tint"
        android:textSize="20sp"
        app:backgroundTint="@color/botao_vermelho_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_referencia" />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="ToxiHelp"
        android:textColor="@color/preto"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Guia prático em casos de intoxicação"
        android:textAlignment="center"
        android:textColor="@color/vermelho_escuro"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Titulo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintBottom_toTopOf="@+id/Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>