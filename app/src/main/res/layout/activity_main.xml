<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/cinza_fundo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b_introducao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introdução"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textSize="20sp"
        android:backgroundTint="@color/vermelho"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="534dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp"
        />

    <Button
        android:id="@+id/b_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="240dp"
        android:text="Categorias"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textSize="20sp"
        android:backgroundTint="@color/vermelho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b_credito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créditos"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textSize="20sp"
        android:backgroundTint="@color/vermelho"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="534dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp"
        />

    <Button
        android:id="@+id/b_referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referências"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textSize="20sp"
        android:backgroundTint="@color/vermelho"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="534dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"
        />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToxiHelp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/preto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="163dp" />

    <TextView
        android:id="@+id/subTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guia prático em casos de intoxicação"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Titulo"
        android:layout_marginTop="80dp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="269dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>