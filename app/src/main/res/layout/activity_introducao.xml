<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_introducao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_fundo"
    tools:context=".Introducao">

    <TextView
        android:id="@+id/titulo_Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_titulo_Intro"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/texto_Intro"
        android:layout_width="325dp"
        android:layout_height="470dp"
        android:layout_marginTop="30dp"
        android:justificationMode="inter_word"
        android:text="@string/texto_introducao_completo"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo_Intro" />
</androidx.constraintlayout.widget.ConstraintLayout>